<!DOCTYPE html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <title>BeYou Admin</title>
  <!-- plugins:css -->
  <link rel="stylesheet" href="../vendors/feather/feather.css">
  <link rel="stylesheet" href="../vendors/ti-icons/css/themify-icons.css">
  <link rel="stylesheet" href="../vendors/css/vendor.bundle.base.css">
  <!-- endinject -->
  <!-- Plugin css for this page -->
  <link rel="stylesheet" href="../vendors/datatables.net-bs4/dataTables.bootstrap4.css">
  <link rel="stylesheet" href="../vendors/ti-icons/css/themify-icons.css">
  <link rel="stylesheet" type="text/css" href="../js/select.dataTables.min.css">
  <!-- End plugin css for this page -->
  <!-- inject:css -->
  <link rel="stylesheet" href="../css/vertical-layout-light/style.css">
  <!-- endinject -->
  <link rel="shortcut icon" href="images/favicon.png" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
    integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
  <style>
    .gradient-custom {
      /* fallback for old browsers */
      background: #cd9cf2;

      /* Chrome 10-25, Safari 5.1-6 */
      background: -webkit-linear-gradient(to top left, rgba(205, 156, 242, 1), rgba(246, 243, 255, 1));

      /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
      background: linear-gradient(to top left, rgba(205, 156, 242, 1), rgba(246, 243, 255, 1))
    }
  </style>
</head>

<body>
  <div class="container-scroller">
    <%- include('./includes/admin-navbar')%>
      <div class="container-fluid page-body-wrapper ">
        <%- include('./includes/side-nav')%>

        <section class="h-100 gradient-custom col-lg-8">
          <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
              <div class="col-lg-12 col-xl-12">
                <div class="card col-lg-12" style="border-radius: 10px;">
  
                  <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                      <p class="small text-muted mb-0">User Id : <%=order.userId%>
                      </p>
                    </div>
  
  
  
                    <div class="card shadow-0 border mb-4">
                      <div class="card-body">
                        
                        <%for (let i=0;i<products.length;i++){%>
  
                        <div class="row">
                          <div class="col-md-2 mt-4">
                            <img src="/productImages/<%=products[i].productId.image[0]%>"
                              class="img-fluid" alt="Phone">
                          </div>
                          <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                            <p class="text-muted mb-0"><%=products[i].productId.name%></p>
                          </div>
                          <!-- <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                            <p class="text-muted mb-0 small">White</p>
                          </div> -->
                          <!-- <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                            <p class="text-muted mb-0 small">Capacity: 64GB</p>
                          </div> -->
                          <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                            <p class="text-muted mb-0 small">Qty:  <%=products[i].quantity%></p>
                          </div>
                          <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                            <p class="text-muted mb-0 small"><%=products[i].price%></p>
                          </div>
                        </div>
                        <%}%>
                      </div>
                    </div>
  
  
  
  
                    <div class="d-flex justify-content-between pt-2">
                      <p class="fw-bold mb-0">Shipping Address</p>
                      
                      <!-- <p class="text-muted mb-0"><span class="fw-bold me-4">Total</span> -->
                        
  
                          <div class="dropdown col-md-3 ">
                            <button class="btn btn-secondary dropdown-toggle" style="font-weight: bold;" type="button"
                              id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                              <%=order.orderStatus%>
                            </button>
                            <div class="dropdown-menu  text-center" aria-labelledby="dropdownMenuButton">
                              <% if(order.orderStatus==="pending" ){%>
                                <a href="/admin/approveOrder/<%=order._id%>" class="btn btn-info">Approve</a>
                                <a href="/admin/cancelOrder/<%=order._id%>" class="btn btn-info">Cancel</a>
        
                                <%}else if(order.orderStatus==="Approved" ){%>
                                  <a href="/admin/dispatchedOrder/<%=order._id%>" class="btn btn-info">Dispatched</a>
                                  <%}else if(order.orderStatus==="Dispatched" ){%>
                                    <a href="/admin/deliveredOrder/<%=order._id%>" class="btn btn-info">Delivered</a>
        
                                    <%}else if(order.orderStatus==="failed" ){%>
                                      <a href="/admin/failedOrder/<%=order._id%>" class="btn btn-info">ok</a>
                                      <%} %>
                            </div>
                          </div>
                        </div></p>
                  
  
                    <div class="d-flex justify-content-between pt-2">
                      <p class="text-muted mb-0"> <%=order.address.name%><br>
                            <%=order.address.houseName%><br>
                            <%=order.address.city%><br>
                            <%=order.address.state%><br>
                            <%=order.address.pincode%><br>
                            <%=order.address.phoneNumber%></p>
                      <!-- <p class="text-muted mb-0"><span class="fw-bold me-4">Discount</span> $19.00</p> -->
                    </div>
  
                   
  
                   
                  </div>
                  
                </div>
              </div>
            </div>
          </div>
        </section>






      </div>
      




  </div>
  </div>
  </div>
  <%- include('./includes/script')%>