<%- include('./includes/user-header')%>
    <style>
        .gradient-custom {
            /* fallback for old browsers */
            background: #cd9cf2;

            /* Chrome 10-25, Safari 5.1-6 */
            background: -webkit-linear-gradient(to top left, rgba(205, 156, 242, 1), rgba(246, 243, 255, 1));

            /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
            background: linear-gradient(to top left, rgba(205, 156, 242, 1), rgba(246, 243, 255, 1))
        }
    </style>
    <%- include('./includes/user-navbar')%>


  <!-- Preloader -->
  <div class="loader-wrap">
    <div class="preloader">
      <div class="preloader-close">Preloader Close</div>
    </div>
    <div class="layer layer-one"><span class="overlay"></span></div>
    <div class="layer layer-two"><span class="overlay"></span></div>
    <div class="layer layer-three"><span class="overlay"></span></div>
  </div>

        <section class="h-100 gradient-custom">
            <div class="container py-5 h-100">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col-lg-10 col-xl-8">
                        <div class="card" style="border-radius: 10px;">

                            <%user.forEach(function(user){%>

                                <div class="card-body p-4">
                                    <div class="d-flex justify-content-between align-items-center mb-4">
                                        <p class="small text-muted mb-0">Order Id : <%=user._id%>
                                        </p>
                                    </div>
                                    <div class="card shadow-0 border mb-4">
                                        <div class="card-body">
                                            <% for (let i=0;i<user.order.length;i++){%>

                                                <div class="row  mt-4">
                                                    <div class="col-md-2">
                                                        <img src="/productImages/<%=user.order[i].productId.image%>" style="height:60px;width:60px"
                                                            class="img-fluid" alt="Phone">
                                                    </div>
                                                    <div
                                                        class="col-md-2 text-center d-flex justify-content-center align-items-center mt-4">
                                                        <%=user.order[i].name%>
                                                            <p class="text-muted mb-0"></p>
                                                    </div>

                                                    <div
                                                        class="col-md-2 text-center d-flex justify-content-center align-items-center mt-4">
                                                        <p class="text-muted mb-0 small">
                                                            <% if(user.paymentMode=="netbanking"){ %>
                                                                Online Payment
                                                              <% } else{ %>  
                                                                <%=user.paymentMode%>
                                                             <% } %>
                                                            
                                                        </p>
                                                    </div>
                                                    <div
                                                        class="col-md-2 text-center d-flex justify-content-center align-items-center mt-4">
                                                        <p class="text-muted mb-0 small">Qty:
                                                            <%=user.order[i].quantity%>
                                                        </p>
                                                    </div>
                                                    <div
                                                        class="col-md-2 text-center d-flex justify-content-center align-items-center mt-4">
                                                        <p class="text-muted mb-0 small">
                                                            <%=user.order[i].price%>
                                                        </p>
                                                    </div>
                                                    <div
                                                        class="col-md-2 text-center d-flex justify-content-center align-items-center mt-4">
                                                        <p class="text-muted mb-0 small">
                                                            <%=user.date%>
                                                        </p>
                                                    </div>
                                                </div>
                                                <%}%>
                                        </div>
                                    </div>

                                    <div class="d-flex justify-content-between pt-2">
                                        <p class="text-muted mb-0"><span class="fw-bold me-4">Total :</span>
                                            <%=user.totalAmount%>
                                        </p>
                                    </div>

                                    <div class="d-flex justify-content-between pt-2">
                                        <p class="text-muted mb-0"><span class="fw-bold me-4">Discount :</span>
                                            <%=user.discountAmount%>
                                        </p>
                                    </div>
                                    <div class="text-left">

                                        <span class="font-weight-bold">order Status: <% if(user.paymentStatus=="failed"){%>
                                            <span class="font-weight-bold">
                                                cancelled-Incomplete payment<%}else if(user.orderStatus=="pending"){%>
                                                   <span>your order is in pending.Will be approving soon</span> <%}
                                                   else if(user.orderStatus=="Delivered"){%>
                                                    <%=user.orderStatus%>
                                                    <%}else if(user.orderStatus=="Cancelled"){%>
                                                        your order is <%=user.orderStatus%>
                                                        <%}
                                                else{%> 
                                                   Your order has been <%=user.orderStatus%>
                                                    <%}%>
                                            </span>
                                            </span>
                                        
                                    </div>
                                    <div class="text-right">
                                       
                                    </div>


                                </div>
                                

                                 
                                    


                                
                            

                                <%})%>

                        </div>
                    </div>
                </div>
            </div>
        </section>
        <%- include('./includes/script')%>