    <%- include('./includes/user-navbar')%>

        <div class="container py-5">
            <div class="row d-flex justify-content-center align-items-center">
                <div class="col">
                    <form action="/editAddress/<%=address._id%>" method="post">
                    <div class="card my-4 shadow-3">
                        <div class="row g-0">
                            <div class="col-xl-12">
                                <div class="card-body p-md-5 text-black">
                                    <h3 class="mb-4 text-uppercase"> Edit Address</h3>
                                    <div class="row">
                                        <div class="col-md-6 mb-4">
                                            <div class="form-outline">
                                                <input type="text" id="name" name="name" value="<%=address.name%>" class="form-control form-control-lg" />
                                                <label class="form-label" for="name" >name</label>
                                            </div>
                                        </div>
                                        <div class="col-md-6 mb-4">
                                            <div class="form-outline">
                                                <input type="text" id="phone" name="phone" value="<%=address.phoneNumber%>" class="form-control form-control-lg" />
                                                <label class="form-label" for="phone">Phone</label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-outline mb-4">
                                        <input type="text" id="address" name="address" value="<%=address.houseName%>" class="form-control form-control-lg" />
                                        <label class="form-label" for="address" >Address</label>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6 mb-4">
                                            <div class="form-outline mb-4">
                                                <input type="text" id="state" name="state" value="<%=address.state%>" class="form-control form-control-lg" />
                                                <label class="form-label" for="state">state</label>
                                            </div>
                                        </div>
                                        <div class="col-md-6 mb-4">
                                            <div class="form-outline mb-4">
                                                <input type="text" id="city" name="city" value="<%=address.city%>" class="form-control form-control-lg" />
                                                <label class="form-label" for="city">City</label>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-outline mb-4">
                                                <input type="text" id="zip" name="zip" value="<%=address.pincode%>" class="form-control form-control-lg" />
                                                <label class="form-label" for="zip">Zip</label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="d-flex justify-content-center pt-3">
                                        <button type="submit" class="btn btn-dark btn-lg ms-2">Submit</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    </form>
                </div>
            </div>
        </div>
