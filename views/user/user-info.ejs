<%- include('./includes/user-header')%>
   <style>
      body {
         margin-top: 20px;
         color: #1a202c;
         text-align: left;
         /* background-color: #e2e8f0;     */
      }

      .main-body {
         padding: 15px;
      }

      .card {
         box-shadow: 0 1px 3px 0 rgba(0, 0, 0, .1), 0 1px 2px 0 rgba(0, 0, 0, .06);
      }

      .card {
         position: relative;
         display: flex;
         flex-direction: column;
         min-width: 0;
         word-wrap: break-word;
         background-color: #fff;
         background-clip: border-box;
         border: 0 solid rgba(0, 0, 0, .125);
         border-radius: .25rem;
      }

      .card-body {
         flex: 1 1 auto;
         min-height: 1px;
         padding: 1rem;
      }

      .gutters-sm {
         margin-right: -8px;
         margin-left: -8px;
      }

      .gutters-sm>.col,
      .gutters-sm>[class*=col-] {
         padding-right: 8px;
         padding-left: 8px;
      }

      .mb-3,
      .my-3 {
         margin-bottom: 1rem !important;
      }

      .bg-gray-300 {
         background-color: #e2e8f0;
      }

      .h-100 {
         height: 100% !important;
      }

      .shadow-none {
         box-shadow: none !important;
      }
   </style>
   <%- include('./includes/user-navbar')%>

      <!-- Preloader -->
      <div class="loader-wrap">
         <div class="preloader">
            <div class="preloader-close">Preloader Close</div>
         </div>
         <div class="layer layer-one"><span class="overlay"></span></div>
         <div class="layer layer-two"><span class="overlay"></span></div>
         <div class="layer layer-three"><span class="overlay"></span></div>
      </div>

      <div class="container mt-4 border">
         <div class="btn btn-dark d-flex justify-content-center align-center mt-4">Profile</div>
         <div class="main-body mt-4">
            <div class="row gutters-sm">

               <div class="col-md-4 mb-3">
                  <div class="card">
                     <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                           <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Admin"
                              class="rounded-circle" width="150">
                           <div class="mt-3">
                             
                              <%if(address.length < 2){%>
                              <a class="btn btn-dark text-white" href="/orderTrack">My Orders</a>
                              
                              <a class="btn btn-dark text-white" href="/address">Add Address</a>
                              <%}else{%>
                              <a class="btn btn-dark text-white" href="/orderTrack">My Orders</a>

                              <%}%>
                           </div>
                        </div>
                     </div>
                  </div>
               </div>
               <div class="col-md-8">
                  <div class="card mb-3">
                     <div class="card-body">
                        <div class="row">
                           <div class="col-sm-3">
                              <h6 class="mb-0">Full Name</h6>
                           </div>
                           <div class="col-sm-9 text-secondary">
                              <%= userData.userName %>

                           </div>
                        </div>
                        <hr>
                        <div class="row">
                           <div class="col-sm-3">
                              <h6 class="mb-0">Email</h6>
                           </div>
                           <div class="col-sm-9 text-secondary">
                              <%= userData.userEmail %>

                           </div>
                        </div>
                        <hr>
                        <div class="row">
                           <div class="col-sm-3">
                              <h6 class="mb-0">Phone</h6>
                           </div>
                           <div class="col-sm-9 text-secondary">
                              <%= userData.mobile %>

                           </div>
                        </div>
                        <hr>
                        <div class="card p-3 py-3 mt-3 card-1 text-center ">
                           <!-- <h4> Address</h4> -->
                           <div class="d-flex row">
                              <%if(address){%>
                               <% for(let i=0; i < address.length ;i++){%>

                              <div class="p-3 card-child col-6">
                                 <div class="d-flex flex-row align-items-center">
                                    <span class="circle">
                                       <i class="fa fa-home"></i>
                                    </span>
                                    <div class="d-flex flex-column ms-3">
                                       <h6 class="fw-bold">Address&nbsp;<%=i+1%></h6>
                                       <span><%=address[i].houseName%> <br><%=address[i].city%>, <%=address[i].state%><br> <%=address[i].pincode%></span>
                                       <span><a href="/editAddress/<%=address[i]._id%>">Edit</a> &nbsp;<a href="/deleteAddress/<%=address[i]._id%>">Delete</a></span>
                                       
                                    </div>
                                 </div>
                              </div>
                              <%}%>
                              <%}%>



                           </div>
                        </div>
                     </div>
                  </div>
               </div>
            </div>
         </div>
      </div>
      </div>
      <div class="container mt-4 d-flex justify-content-center">
         <div class="justify-content-center"><a href="/" class="btn btn-dark">Back to homepage</a></div>
      </div>
      <%- include('./includes/script')%>